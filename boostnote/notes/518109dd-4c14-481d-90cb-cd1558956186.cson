  # B 1001
  ```c++
  #define _CRT_SECURE_NO_WARNINGS
  #include<cstdio>
  using namespace std;
  
  int main()
  {
  	int n;
  	scanf("%d", &n);
  	int i = 0;
  	while (n != 1)
  	{
  		if (n % 2 == 0)
  		{
  			n = n / 2;
  		}
  		else
  		{
  			n = (3 * n + 1) / 2;
  		}
  		i++;
  	}
  	printf("%d\\n", i);
  }
  ```
